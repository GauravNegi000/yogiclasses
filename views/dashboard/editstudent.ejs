<% include ../partials/dashboardhead %>
<% var role = currentUser.role %>

        <div id="page-wrapper">
            <div id="page-inner">    
                <div class="row">
                    <% if(success && success.length > 0) { %>      
                    <div class="alert alert-success" role="alert">
                        <%= success %>
                    </div>
                    <% } %>
                    <% if(error && error.length > 0) { %>      
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                    <% } %>
                    <div class="col-md-12">
                        <h1 class="page-head-line"> EditStudent Details</h1>
                        <h1 class="page-subhead-line">Student details here</h1>

                    </div>
                </div>
                <h3 class="btn btn-info btn-lg">Name: <%= student.name %></h3><br><hr>
                    <form action="/dashboard/admin/students/<%= student._id %>/removeteacher?_method=PUT " method="POST">
                        <button class="btn btn-block btn-danger" type="submit">Remove Alloted Subjects and Teacher</button>
                    </form><br> <hr>
                    <form action="/dashboard/admin/students/<%= student._id %>?_method=PUT " method="POST">
                    <div class="row">
                        <div class="col-md-2">
                            <label>Allot Subjects</label>
                        </div>
                        <div class="col-md-10">
                            <input class="form-control" name="allotedsubject" type="text" placeholder="Enter subjects here" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <label>Allot Teacher</label>
                        </div>
                        <div class="col-md-10">
                            <select class="form-control" name="teacherId" size="1">
                                <% teachers.forEach(function(teacher){ %>
                                    <option value="<%= teacher._id %>"><%= teacher.name %></option>
                                <% }) %>                               
                            </select>
                        </div>
                    </div><br>                    
                    <div class="row">
                        <div class="col-md-1">
                            
                        </div>
                        <div class="col-md-9">
                            <button class="form-control btn btn-success" type="submit">Update</button>
                        </div>
                        <div class="col-md-2">
                            
                        </div>
                    </div>            
                    </form> <br>
                    <form action="/dashboard/admin/students/<%= student._id %>/course " method="POST">
                        <div class="row">
                            <div class="col-md-2">
                                <label>Allot Course</label>
                            </div>
                            <div class="col-md-10">
                                <select class="form-control" name="courseId" size="1">
                                    <% courses.forEach(function(course){ %>
                                        <option value="<%= course._id %>"><%= course.title %></option>
                                    <% }) %>                               
                                </select>
                            </div>
                        </div><br>
                        <div class="row">
                            <div class="col-md-1">
                                
                            </div>
                            <div class="col-md-9">
                                <button class="form-control btn btn-success" type="submit">Allot</button>
                            </div>
                            <div class="col-md-2">
                                
                            </div>
                        </div>            
                        </form><br><hr>
                        <h4>Courses Alloted</h4> 
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th width="50">S.No.</th>
                                        <th width="400">Name</th>
                                        <th >Action</th>
                                        <!-- <th>Sub Total</th> -->
                                    </tr>
                                </thead>
                                <tbody>
                                <% var count = 1;  %>
                                <% student.courseAllot.forEach(course => { %>
                                    <tr>
                                            <td><%= count++ %>.</td>
                                            <td><%= course.title %></td>
                                            <td>
                                            <form action="/dashboard/admin/students/<%= student._id %>/course/<%= course._id %>?_method=DELETE"  method="POST" onsubmit = "return confirm('Are You sure yo want to delete');">
                                            <button type="submit" class="btn btn-md btn-danger">Remove</button>
                                            </form>    
                                            </td>               
                                    </tr>
                                <% })   %>                                 
                                </tbody>
                            </table>
                        </div><br><hr>
                        <h4>Fees / Transaction Form</h4> 
                        <form action="/dashboard/admin/students/<%= student._id %>/transaction" method="POST">
                            <div class="row">
                                <div class="col-md-2">
                                    <label>Subject / Course</label>                                    
                                </div>
                                <div class="col-md-4">
                                    <input class="form-control" name="subject" type="text" placeholder="Enter here" required>                                    
                                </div>
                                <div class="col-md-2">
                                    <label>Month / Validity</label>                                                                        
                                </div>
                                <div class="col-md-4">
                                    <input class="form-control" name="month" type="text" placeholder="Enter here" required>                                    
                                </div>
                            </div> <br>
                            <div class="row">
                                <div class="col-md-2">
                                    <label>Amount</label>                                    
                                </div>
                                <div class="col-md-4">
                                    <input class="form-control" name="amount" type="text" placeholder="Enter here" required>                                    
                                </div>
                                <div class="col-md-2">
                                    <label>Paid / Due</label>                                                                        
                                </div>
                                <div class="col-md-4">
                                    <input class="form-control" name="paid" type="text" placeholder="Enter here" required>                                    
                                </div>                                
                            </div><br> 
                            <div class="row">
                                <div class="col-md-2">
                                    <label>Payment Mode</label>                                                                        
                                </div>
                                <div class="col-md-4">
                                    <input class="form-control" name="paymentmode" type="text" placeholder="Enter here" required>                                    
                                </div>
                                <div class="col-md-2">
                                    <label>Payment Details</label>                                    
                                </div>
                                <div class="col-md-4">
                                    <input class="form-control" name="paymentdetails" type="text" placeholder="Enter here" required>                                    
                                </div>                                
                            </div><br> 
                            <button class="btn btn-md btn-info" type="submit">Save Details</button>
                        </form><br> <hr>
                        <h4>Fees / Transaction Details</h4> 
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th width="50">S.No.</th>
                                        <th width="150">Subject/Course</th>
                                        <th width="150">Month/Validity</th>
                                        <th width="150">Amount</th>
                                        <th width="150">Paid/Due</th>
                                        <th width="200">Payment Mode</th>
                                        <th width="200">Payment Details</th>
                                        <th width="150">Payment Date</th>
                                        <th >Action</th>
                                        <!-- <th>Sub Total</th> -->
                                    </tr>
                                </thead>
                                <tbody>
                                <% var count = 1;  %>
                                <% student.transactions.reverse().forEach(transaction => { %>
                                    <tr>
                                            <td><%= count++ %>.</td>
                                            <td><%= transaction.subject%></td>
                                            <td><%= transaction.month %></td>
                                            <td><%= transaction.amount %></td>
                                            <td><%= transaction.paid %></td>
                                            <td><%= transaction.pmode %></td>
                                            <td><%= transaction.pdetails %></td>
                                            <td><%= moment(transaction.created).format("MMM Do YY") %></td>
                                            <td>
                                            <form action="/dashboard/admin/students/<%= student._id %>/transaction/<%= transaction._id %>?_method=DELETE"  method="POST" onsubmit = "return confirm('Are You sure yo want to delete');">
                                            <button type="submit" class="btn btn-md btn-danger">Delete</button>
                                            </form>    
                                            </td>               
                                    </tr>
                                <% })   %>                                 
                                </tbody>
                            </table>
                        </div>
                               
                <!-- /. PAGE INNER  -->
            </div>
            <!-- /. PAGE WRAPPER  -->
        </div>
        <!-- /. WRAPPER  -->

<% include ../partials/dashboardfoot %>
